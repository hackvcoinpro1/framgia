<% provide :title, t("users.index.title_all_users") %>
<h1><%= t "users.index.h1__all_users" %></h1>
<div class="row">
 <div class="col-xs-12">
  <div class="box">
    <div class="box-header">
      <div class="col-md-2">
        <%= link_to t("users.signup.newuser"), new_suppervisor_user_path, class: "btn btn-block btn-primary" %>
      </div>
    </div>
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tbody>
          <tr>
            <% displayed_column_for_suppervisor.each do |item| %>
              <th class="cell_custom"><%= item.capitalize %></th>
            <% end %>
          </tr>
          <%= render partial: "user", collection: @users, as: :user%>
        </tbody>
      </table>
    </div>
  </div>
  <%= will_paginate @users %>
</div>
</div>

